{
    "name": "RSS Feed Updates",
    "description": "Fetches and posts RSS feed updates for Tech News, Finance, and Cybersecurity to a Telex channel",
    "version": "1.0.0",
    "type": "interval",
    "author": {
        "name": "Collins Lekakeny",
        "email": "lekakenycollins8@gmail.com"
    },
    "configuration": {
        "required": [
            {
                "name": "updateInterval",
                "type": "number",
                "description": "Update interval in milliseconds",
                "default": 3600000,
                "minimum": 60000,
                "maximum": 86400000
            },
            {
                "name": "feeds",
                "type": "array",
                "description": "List of RSS feeds to monitor",
                "items": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "URL of the RSS feed"
                        },
                        "category": {
                            "type": "string",
                            "enum": ["Tech", "Finance", "Cybersecurity"],
                            "description": "Category of the RSS feed"
                        }
                    },
                    "required": ["url", "category"]
                },
                "default": [
                    {
                        "url": "https://techcrunch.com/feed/",
                        "category": "Tech"
                    },
                    {
                        "url": "https://www.bloomberg.com/feeds/technology.rss",
                        "category": "Finance"
                    },
                    {
                        "url": "https://krebsonsecurity.com/feed/",
                        "category": "Cybersecurity"
                    }
                ]
            }
        ],
        "optional": [
            {
                "name": "messageFormat",
                "type": "string",
                "description": "Format of the message to post in the Telex channel",
                "default": "${emoji} ${category}: ${title}\n\nðŸ”— Read more: ${link}"
            }
        ]
    },
    "permissions": {
        "channel": {
            "send_messages": true
        },
        "http": {
            "external_requests": true
        }
    },
    "triggers": [
        {
            "type": "interval",
            "config": {
                "interval": "${updateInterval}"
            }
        }
    ]
}